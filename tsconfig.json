{
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"],

  "compilerOptions": {
    "lib": ["dom", "es2023"],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/storybook/*": [".storybook/*"],
      "@/mocks/*": ["mocks/*"],
      "@/tests/*": ["tests/*"],
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "resources/*": ["resources/*"]
    },
    "types": ["node", "vite/client", "vitest/globals"]
  }
}
